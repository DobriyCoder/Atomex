@inject CBlocksHelperVM BlocksHelper
@model IEnumerable<CCoinDataVM>

<div class="dc-coins-table">
    <div class="dcg-table">
        <div class="dcg-table__tr dc-coins-table__head">
            <span class="dcg-table__ti dcg-table__th dcg-caption">Name</span>
            <span class="dcg-table__ti dcg-table__th dcg-caption">Price</span>
            <span class="dcg-table__ti dcg-table__th dcg-caption">Market Cap</span>
            <span class="dcg-table__ti dcg-table__th dcg-caption">24 Volume</span>
            <span class="dcg-table__ti dcg-table__th dcg-caption">24h change</span>
        </div>

        @foreach (var coin in Model)
        {
            <a asp-controller="Coins" asp-action="Coin" asp-route-coin="@coin.data.name" class="dcg-table__tr dc-coins-table__item dcj-btn">
                <sapn class="dcg-table__ti dcg-table__td">
                    @await Html.PartialAsync("_Coin", (data: coin.data, link: false))
                </sapn>

                <sapn class="dcg-table__ti dcg-table__td">
                    @if (coin.data.usd_price != null)
                    {
                        <span class="dc-coins-table__text-box dcg-caption">≈ @coin.data.usd_price</span>
                    }
                </sapn>
                <sapn class="dcg-table__ti dcg-table__td"><span class="dc-coins-table__text-box dcg-caption">$@coin.data.market_cap</span></sapn>
                <sapn class="dcg-table__ti dcg-table__td"><span class="dc-coins-table__text-box dcg-caption">$@coin.data.volume_24h</span></sapn>
                <sapn class="dcg-table__ti dcg-table__td"><span class="dc-coins-table__text-box dcg-caption"><change>@coin.data.day_percent_change</change></span></sapn>
            </a>
        }
    </div>
</div>