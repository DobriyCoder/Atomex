@model IEnumerable<CCoinPairDataVM>

<table class="dc-pairs-table">
    <tr class="dc-pairs-table__head">
        <th>From - To</th>
        <th>Price</th>
        <th>Network Fee</th>
        <th>Instant volume</th>
        <th>Traded  volume @await Html.PartialAsync("_TableOrderIcons")</th>
        <th>Availability</th>
    </tr>

    @foreach (var pair in Model)
    {
        <tr class="dc-pairs-table__item">
            <td> 
                @await Html.PartialAsync("_Coin", pair.coin1)
                @await Html.PartialAsync("_Coin", pair.coin2)
            </td>

            <td><span>≈ $@pair.data.price_1</span></td>
            <td><span>$@CConst.NETWORK_FEE</span></td>
            <td><span>$@pair.data.volume_24h_2 @pair.coin1.name</span></td>
            <td><span>$@pair.data.volume_24h_1</span></td>
            <td><img src="/images/mobile.svg" alt="icon-mobile"/><span>@CConst.AVAILABILITY</span></td> 
        </tr>
    }
</table>