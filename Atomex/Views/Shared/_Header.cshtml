@*@model I_header *@

<div class="dc-header">
    <div class="container">
        <div class="dc-header__wrap">
            <div class="row">
                <div class="col col-md-2">
                    @await Html.PartialAsync("_Logo")
                </div>
                <div class="col col-xl-6 d-none d-xl-block">
                    @await Html.PartialAsync("_MainMenu")
                </div>
                <div class="col-4 d-none d-xl-block">
                    @await Html.PartialAsync("_MainBtnMenu")
                </div>
                <div class="col d-xl-none position-static dcg-pos">
                    @await Html.PartialAsync("_MobMainMenu")
                </div>
            </div>
        </div>
    </div>
</div>