@inject CBlocksHelperVM BlocksHelper
@*@model I_download-wallet *@

<div class="dc-download-wallet">
    <div class="row">
        <div class="col-12 col-md-6 col-lg">
                <h2 class="dcg-h2">Download Atomex Wallet</h2>
                <p class="dc-download-wallet__text-small">
                    Atomex is a non-custodial multicurrency HD wallet. Audited
                    and available on multiple platforms. 
                </p> 
            <div class="dc-download-wallet_wrapper-main">
                @await Html.PartialAsync("_DownloadBtn")
            </div>
        </div>
        <div class="col-12 col-md-6 col-lg-7">
            <div class="dc-download-wallet__decorative-blocks">
                <img class="dc-download-wallet__decorative-img" src="@BlocksHelper.GetUrl()images/decorative-img.png"/>
            </div>
        </div>
    </div>
</div> 