@inject CBlocksHelperVM BlocksHelper
@model CCoinPairDataM

<div class="dc-pair-info">
    <h2 class="dcg-h2 dc-pair-info__title">Live @Model.coin_1.name to @Model.coin_2.name price chart</h2>
    <div class="row">
        <div class="col">
            <div class="dc-coin-info__item">
                <div class="dc-coin-info__caption dcg-caption">Price</div>
                <h3 class="dcg-h3 dc-coin-info__value">@BlocksHelper.ToCurr(Model.price_1 ?? 0) @Model.name_2.ToLower()</h3>
            </div>
        </div>
        <div class="col">
            <div class="dc-coin-info__item">
                <div class="dc-coin-info__caption dcg-caption">Market cap</div>
                <h3 class="dcg-h3 dc-coin-info__value">@BlocksHelper.ToCurr(Model.market_cap ?? 0)</h3>
            </div>
        </div>
        <div class="col">
            <div class="dc-coin-info__item">
                <div class="dc-coin-info__caption dcg-caption">24 Volume</div>
                <h3 class="dcg-h3 dc-coin-info__value">@BlocksHelper.ToCurr(Model.volume_24h_1 ?? 0)</h3>
            </div>
        </div>
        <div class="col">
            <div class="dc-coin-info__item">
                <div class="dc-coin-info__caption dcg-caption">24h change</div>
                <h3 class="dcg-h3 dc-coin-info__value dc-coin-info__value_positive"><change>@Model.day_percent_change</change></h3>
            </div>
        </div>
    </div>
    @await Html.PartialAsync("_GraphWidget", (coin1: Model.coin_1.name, coin2: Model.coin_2.name))
</div>