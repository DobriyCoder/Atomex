        <div class="dcg-section_padding dcg-bg-basic">
            <div class="row">
                <div class="col">
                    @await Html.PartialAsync("_MainTitleInfo")
                </div>
                <div class="col">
                    @await Html.PartialAsync("_ExchangeWidget")
                </div>
            </div>
        </div>
        <div class="dcg-section">
            @await Html.PartialAsync("_CoinsLine")
        </div>
        <div class="dcg-section">
