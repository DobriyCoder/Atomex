@model CHomeVM
@inject CBlocksHelperVM BlocksHelper

@{
    ViewData["Title"] = Model.SeoInfo.title == "" ? "CriptoApi" : Model.SeoInfo.title;
    ViewData["Description"] = Model.SeoInfo.text == "" ? "" : Model.SeoInfo.text;
    ViewData["Title"] = "Home Page";
    ViewData["PageClass"] = "dc-main-page";
}

<div class="dc-main-page-content">
    <div class="container">
        <div class="dcg-section dcg-section_padding-heading dcg-section_light-bottom-left dcg-bg-basic ">
            <div class="row">
                <div class="col">
                    @await Html.PartialAsync("_MainTitleInfo")
                </div>
                <div class="col">
                    @await Html.PartialAsync("_ExchangeWidget") 
                </div>
            </div>
        </div>
        <div class="dcg-section dcg-section_border-bottom dcg-section_border dcg-section_coins-line">
            @await Html.PartialAsync("_CoinsLine", BlocksHelper.GetCoinList(9))
        </div>
        <div class="dcg-section dcg-section_border-bottom dcg-section_padding-small">
            @await Html.PartialAsync("_Highlights")
        </div>
        <div class="dcg-section dcg-section_padding-big"> 
            @await Html.PartialAsync("_Benefits")
        </div>
        <div class="dcg-section dcg-section_padding-small">
            @await Html.PartialAsync("_PopularPairs")
        </div>
        <div class="dcg-section dcg-section_padding-small dcg-section_light-bottom-left">
            @await Html.PartialAsync("_DownloadWallet")
        </div>
        <div class="dcg-section dcg-section_padding-big">
            @await Html.PartialAsync("_Reports")
        </div>
        <div class="dcg-section dcg-section_border-bottom dcg-section_padding-big">
            @await Html.PartialAsync("_Faq")
        </div>
    </div>
</div>
